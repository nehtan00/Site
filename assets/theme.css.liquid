/* CSS Variables from Shopify Settings */
:root {
  --color-background: {{ settings.color_background }};
  --color-card-background: {{ settings.color_card_background }};
  --color-text: {{ settings.color_text }};
  --color-accent: {{ settings.color_accent }};
}

/* Base Styles */
*, *::before, *::after { box-sizing: border-box; }
html { font-size: 62.5%; }
body {
  background-color: var(--color-background);
  color: var(--color-text);
  font-family: var(--font-body);
  font-style: var(--font-style-body);
  font-weight: var(--font-weight-body);
  font-size: 1.6rem;
  line-height: 1.6;
  margin: 0;
  display: flex;
  flex-direction: column;
  min-height: 100vh;
}
.main-content {
  flex-grow: 1;
  width: 100%;
  max-width: 1200px;
  margin: 0 auto;
  padding: 4rem 2rem;
}
h1, h2, h3, h4, h5, h6 {
  font-family: var(--font-heading);
  font-weight: var(--font-weight-heading);
  font-style: var(--font-style-heading);
  color: var(--color-text);
  margin-top: 0;
}
a { color: var(--color-accent); text-decoration: none; }
a:hover { text-decoration: underline; }
img { max-width: 100%; height: auto; }

/* Header & Footer */
.site-header {
  padding: 2rem;
  display: flex;
  justify-content: space-between;
  align-items: center;
  max-width: 1200px;
  margin: 0 auto;
  width: 100%;
}
.site-header__title { font-size: 2.4rem; margin: 0; }
.site-footer { padding: 4rem 2rem; text-align: center; font-family: var(--font-heading); }
.site-footer ul { list-style: none; padding: 0; margin: 0; display: flex; gap: 2rem; justify-content: center; }

/* Generic Grid Layout */
.grid {
  display: grid;
  gap: 2rem;
  padding: 0;
  margin: 0;
  list-style: none;
}
.grid--2-cols { grid-template-columns: 1fr 1fr; }
.grid--3-cols { grid-template-columns: repeat(auto-fill, minmax(300px, 1fr)); }

/* Collection Card (Homepage) & Product Card (Collection Page) */
.card {
  background-color: var(--color-card-background);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 8px;
  transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
  overflow: hidden;
}
.card:hover {
  transform: translateY(-5px);
  box-shadow: 0 10px 20px rgba(0,0,0,0.2);
}
.card__link { display: block; height: 100%; color: var(--color-text); }
.card__image-wrapper {
  aspect-ratio: 1 / 1;
  overflow: hidden;
}
.card__image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.3s ease;
}
.card:hover .card__image { transform: scale(1.05); }
.card__info { padding: 2rem; }
.card__title { font-size: 2.2rem; margin: 0 0 1rem 0; color: var(--color-accent); }
.card__description, .card__price { font-size: 1.4rem; margin: 0; opacity: 0.8; }

/* Main Product Page */
.main-product { display: grid; grid-template-columns: 1fr; gap: 4rem; }
@media (min-width: 768px) { .main-product { grid-template-columns: 1fr 1fr; } }
.main-product__media { border-radius: 8px; overflow: hidden; }
.main-product__title { font-size: 4rem; margin-bottom: 1rem; }
.main-product__price { font-size: 2rem; margin-bottom: 2rem; }
.product-form { display: flex; flex-direction: column; gap: 2rem; }
.product-form__label { font-family: var(--font-heading); font-size: 1.4rem; opacity: 0.7; }
.product-form__select {
  background-color: var(--color-card-background);
  border: 1px solid rgba(255, 255, 255, 0.1);
  color: var(--color-text);
  padding: 1rem;
  border-radius: 4px;
}
.product-form__button {
  background-color: var(--color-accent);
  color: var(--color-background);
  border: none;
  border-radius: 50px;
  padding: 1.2rem 3rem;
  font-family: var(--font-heading);
  font-size: 1.6rem;
  cursor: pointer;
  transition: background-color 0.2s ease, color 0.2s ease, border-color 0.2s ease, filter 0.2s ease;
}
.product-form__button:hover { filter: brightness(1.1); }
.product-form__button:disabled { background-color: #555; cursor: not-allowed; filter: none; }

/* Cart Page */
.cart-items { border-collapse: collapse; width: 100%; margin-bottom: 3rem; }
.cart-items th, .cart-items td { padding: 1.5rem; text-align: left; border-bottom: 1px solid rgba(255, 255, 255, 0.1); }
.cart-items th { font-family: var(--font-heading); }
.cart-item__image { width: 80px; height: 80px; object-fit: cover; border-radius: 4px; }
.cart-footer { text-align: right; }
.cart-footer__total { font-size: 2rem; font-family: var(--font-heading); margin-bottom: 2rem; }
.cart-footer__checkout-button { /* Uses .product-form__button styles */ }

/* Skip to content link */
.skip-to-content-link {
  position: absolute;
  transform: translateY(-150%);
  transition: transform 0.3s;
  background: var(--color-accent);
  color: var(--color-background);
  font-weight: bold;
  padding: 0.5em 1em;
  border-radius: 4px;
  z-index: 100;
}
.skip-to-content-link:focus { transform: translateY(0%); }

/* Secondary button style for things like "Update Cart" */
.button--secondary {
  background-color: transparent;
  color: var(--color-text);
  border: 1px solid var(--color-accent);
}
.button--secondary:hover {
  background-color: var(--color-accent);
  color: var(--color-background);
  border-color: var(--color-accent);
}